<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="24dp"
        android:hint="Enter your first number here:"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/number2"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="24dp"
        android:hint="Enter your first number here:"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btn_modulus"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:text="CALCULATE" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Result"
            android:textSize="30sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/btn_addition"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:text="Addition"
        app:layout_constraintEnd_toStartOf="@+id/btn_subtraction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <CheckBox
        android:id="@+id/btn_subtraction"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:text="Subtraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_addition"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <CheckBox
        android:id="@+id/btn_division"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Division"
        app:layout_constraintEnd_toEndOf="@+id/btn_subtraction"
        app:layout_constraintStart_toStartOf="@+id/btn_subtraction"
        app:layout_constraintTop_toBottomOf="@+id/btn_subtraction" />

    <CheckBox
        android:id="@+id/btn_multiplication"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Multiplication"
        app:layout_constraintEnd_toEndOf="@+id/btn_addition"
        app:layout_constraintStart_toStartOf="@+id/btn_addition"
        app:layout_constraintTop_toBottomOf="@+id/btn_addition" />

    <CheckBox
        android:id="@+id/btn_modulus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Modulus"
        app:layout_constraintEnd_toEndOf="@+id/btn_multiplication"
        app:layout_constraintStart_toStartOf="@+id/btn_multiplication"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiplication" />

</androidx.constraintlayout.widget.ConstraintLayout>